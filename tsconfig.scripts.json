{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "noEmit": false,
    "outDir": "dist/scripts",
    "isolatedModules": false,
    "incremental": false
  },
  "include": ["src/scripts/**/*.ts"],
  "exclude": ["node_modules", ".next"]
}
